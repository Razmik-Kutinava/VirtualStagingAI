    <!-- –°–ö–†–ò–ü–¢–´: —Å–ª–∞–π–¥–µ—Ä, –ø–æ–∫–∞–∑ —Ü–µ–Ω -->
    <script>
        // –ñ–¥–µ–º –ø–æ–ª–Ω–æ–π –∑–∞–≥—Ä—É–∑–∫–∏ DOM
        document.addEventListener('DOMContentLoaded', function() {
            // before/after —Å–ª–∞–π–¥–µ—Ä
            const container = document.getElementById('slider-container');
            const after = document.getElementById('after-image');
            const slider = document.getElementById('slider');
            let drag = false;

            if (container && after && slider) {
                const move = (x) => {
                    const rect = container.getBoundingClientRect();
                    let offset = x - rect.left;
                    if (offset < 0) offset = 0;
                    if (offset > rect.width) offset = rect.width;
                    const percent = (offset / rect.width) * 100;
                    after.style.width = percent + '%';
                    slider.style.left = percent + '%';
                };

                container.addEventListener('mousedown', (e) => { drag = true; move(e.clientX); });
                window.addEventListener('mousemove', (e) => { if (drag) { e.preventDefault(); move(e.clientX); } });
                window.addEventListener('mouseup', () => { drag = false; });
                container.addEventListener('touchstart', (e) => { drag = true; move(e.touches[0].clientX); });
                window.addEventListener('touchmove', (e) => { if (drag) { e.preventDefault(); move(e.touches[0].clientX); } });
                window.addEventListener('touchend', () => { drag = false; });
            }

            // –ü–ª–∞–≤–Ω–∞—è –ø—Ä–æ–∫—Ä—É—Ç–∫–∞ –¥–ª—è –≤—Å–µ—Ö —è–∫–æ—Ä–Ω—ã—Ö —Å—Å—ã–ª–æ–∫ (–¥–µ–ª–µ–≥–∏—Ä–æ–≤–∞–Ω–∏–µ —Å–æ–±—ã—Ç–∏–π)
            document.addEventListener('click', function(e) {
                // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ –∫–ª–∏–∫ –±—ã–ª –ø–æ —Å—Å—ã–ª–∫–µ —Å —è–∫–æ—Ä–µ–º (—Ç–æ–ª—å–∫–æ –¥–ª—è —è–∫–æ—Ä–Ω—ã—Ö —Å—Å—ã–ª–æ–∫ –Ω–∞ —ç—Ç–æ–π —Å—Ç—Ä–∞–Ω–∏—Ü–µ)
                const anchor = e.target.closest('a[href^="#"]');
                if (!anchor) return;
                
                // –ù–ï –±–ª–æ–∫–∏—Ä—É–µ–º —Å—Å—ã–ª–∫–∏, –∫–æ—Ç–æ—Ä—ã–µ –≤–µ–¥—É—Ç –Ω–∞ –¥—Ä—É–≥–∏–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã (–Ω–µ –Ω–∞—á–∏–Ω–∞—é—Ç—Å—è —Å #)
                const href = anchor.getAttribute('href');
                if (!href || !href.startsWith('#')) {
                    return; // –ü–æ–∑–≤–æ–ª—è–µ–º –æ–±—ã—á–Ω—ã–º —Å—Å—ã–ª–∫–∞–º —Ä–∞–±–æ—Ç–∞—Ç—å –Ω–æ—Ä–º–∞–ª—å–Ω–æ
                }
                
                // –ü—Ä–æ–ø—É—Å–∫–∞–µ–º –ø—É—Å—Ç—ã–µ —Å—Å—ã–ª–∫–∏ –∏ —Å—Å—ã–ª–∫–∏ —Ç–æ–ª—å–∫–æ —Å #
                if (href === '#' || href === '') {
                    return;
                }
                
                const targetId = href.substring(1);
                const targetElement = document.getElementById(targetId);
                
                if (targetElement) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    // –°–ø–µ—Ü–∏–∞–ª—å–Ω–∞—è –æ–±—Ä–∞–±–æ—Ç–∫–∞ –¥–ª—è pricing (–ø–æ–∫–∞–∑–∞—Ç—å —Å–∫—Ä—ã—Ç—É—é —Å–µ–∫—Ü–∏—é)
                    if (targetId === 'pricing') {
                        targetElement.classList.remove('hidden');
                        // –ù–µ–±–æ–ª—å—à–∞—è –∑–∞–¥–µ—Ä–∂–∫–∞ –¥–ª—è —Ä–µ–Ω–¥–µ—Ä–∏–Ω–≥–∞ –ø–µ—Ä–µ–¥ –ø—Ä–æ–∫—Ä—É—Ç–∫–æ–π
                        setTimeout(() => {
                            const offsetTop = targetElement.offsetTop - 80; // –£—á–µ—Ç –≤—ã—Å–æ—Ç—ã sticky nav
                            window.scrollTo({
                                top: offsetTop,
                                behavior: 'smooth'
                            });
                        }, 100);
                    } else {
                        // –û–±—ã—á–Ω–∞—è –ø–ª–∞–≤–Ω–∞—è –ø—Ä–æ–∫—Ä—É—Ç–∫–∞ –¥–ª—è –æ—Å—Ç–∞–ª—å–Ω—ã—Ö —Å–µ–∫—Ü–∏–π
                        const offsetTop = targetElement.offsetTop - 80; // –£—á–µ—Ç –≤—ã—Å–æ—Ç—ã sticky nav
                        window.scrollTo({
                            top: offsetTop,
                            behavior: 'smooth'
                        });
                    }
                }
            });

            // –ú–æ–±–∏–ª—å–Ω–æ–µ –º–µ–Ω—é
            const mobileMenuBtn = document.getElementById('mobile-menu-btn');
            const mobileMenuClose = document.getElementById('mobile-menu-close');
            const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
            const mobileMenuDrawer = document.getElementById('mobile-menu-drawer');
            const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');

            function openMobileMenu() {
                mobileMenuBtn.classList.add('active');
                mobileMenuOverlay.classList.add('active');
                mobileMenuDrawer.classList.add('active');
                document.body.style.overflow = 'hidden';
            }

            function closeMobileMenu() {
                mobileMenuBtn.classList.remove('active');
                mobileMenuOverlay.classList.remove('active');
                mobileMenuDrawer.classList.remove('active');
                document.body.style.overflow = '';
            }

            if (mobileMenuBtn) {
                mobileMenuBtn.addEventListener('click', openMobileMenu);
            }

            if (mobileMenuClose) {
                mobileMenuClose.addEventListener('click', closeMobileMenu);
            }

            if (mobileMenuOverlay) {
                mobileMenuOverlay.addEventListener('click', closeMobileMenu);
            }

            // –ó–∞–∫—Ä—ã—Ç–∏–µ –º–µ–Ω—é –ø—Ä–∏ –∫–ª–∏–∫–µ –Ω–∞ —Å—Å—ã–ª–∫—É
            mobileNavLinks.forEach(link => {
                link.addEventListener('click', () => {
                    setTimeout(closeMobileMenu, 300); // –ù–µ–±–æ–ª—å—à–∞—è –∑–∞–¥–µ—Ä–∂–∫–∞ –¥–ª—è –ø–ª–∞–≤–Ω–æ–π –ø—Ä–æ–∫—Ä—É—Ç–∫–∏
                });
            });

            // –ó–∞–∫—Ä—ã—Ç–∏–µ –º–µ–Ω—é –ø—Ä–∏ –Ω–∞–∂–∞—Ç–∏–∏ Escape
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && mobileMenuDrawer.classList.contains('active')) {
                    closeMobileMenu();
                }
            });
        });
    </script>
