    <!-- JavaScript for interactive elements -->
    <script>
        // Before/After Slider
        document.addEventListener('DOMContentLoaded', function() {
            const slider = document.getElementById('slider');
            const beforeImage = document.getElementById('before-image');
            const afterImage = document.getElementById('after-image');
            let isDragging = false;

            if (slider && beforeImage && afterImage) {
                slider.addEventListener('mousedown', function() {
                    isDragging = true;
                });

                document.addEventListener('mousemove', function(e) {
                    if (!isDragging) return;
                    
                    const container = slider.parentElement;
                    const containerRect = container.getBoundingClientRect();
                    let x = e.clientX - containerRect.left;
                    
                    // Keep slider within bounds
                    x = Math.max(0, Math.min(x, containerRect.width));
                    
                    // Update slider position
                    slider.style.left = x + 'px';
                    
                    // Update image widths
                    const percentage = (x / containerRect.width) * 100;
                    afterImage.style.width = percentage + '%';
                });

                document.addEventListener('mouseup', function() {
                    isDragging = false;
                });

                // Touch events for mobile
                slider.addEventListener('touchstart', function() {
                    isDragging = true;
                });

                document.addEventListener('touchmove', function(e) {
                    if (!isDragging) return;
                    
                    const container = slider.parentElement;
                    const containerRect = container.getBoundingClientRect();
                    let x = e.touches[0].clientX - containerRect.left;
                    
                    x = Math.max(0, Math.min(x, containerRect.width));
                    slider.style.left = x + 'px';
                    
                    const percentage = (x / containerRect.width) * 100;
                    afterImage.style.width = percentage + '%';
                });

                document.addEventListener('touchend', function() {
                    isDragging = false;
                });
            }

            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop - 80,
                            behavior: 'smooth'
                        });
                    }
                });
            });

            // Show pricing section when clicking pricing link
            document.querySelectorAll('a[href="#pricing"]').forEach(link => {
                link.addEventListener('click', function(e) {
                    const pricingSection = document.getElementById('pricing');
                    if (pricingSection) {
                        pricingSection.classList.remove('hidden');
                        setTimeout(() => {
                            window.scrollTo({
                                top: pricingSection.offsetTop - 80,
                                behavior: 'smooth'
                            });
                        }, 100);
                    }
                });
            });
        });
    </script>
