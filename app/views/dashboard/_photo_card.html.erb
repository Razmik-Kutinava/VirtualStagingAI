<% styles_count = image.styles_count %>
<%= link_to project_path(image), class: "group relative block bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-200" do %>
  <div class="aspect-square relative overflow-hidden bg-gray-100">
    <% if image.file.attached? %>
      <%= image_tag image.file, class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300", alt: "Photo" %>
    <% else %>
      <div class="w-full h-full flex items-center justify-center text-gray-400 bg-gradient-to-br from-gray-50 to-gray-100">
        <svg class="w-20 h-20 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
      </div>
    <% end %>
    
    <% if styles_count > 0 %>
      <div class="absolute top-3 right-3 bg-blue-500 text-white text-xs font-bold px-3 py-1.5 rounded-full shadow-lg backdrop-blur-sm bg-opacity-90">
        <%= styles_count %> <%= styles_count == 1 ? 'style' : 'styles' %>
      </div>
    <% end %>
  </div>
  
  <div class="p-5">
    <div class="text-sm font-semibold text-gray-900 truncate mb-1">
      <%= image.room_type&.humanize || "Untitled" %>
    </div>
    <div class="text-xs text-gray-500 font-medium">
      <%= image.created_at.strftime("%B %d, %Y") %>
    </div>
  </div>
<% end %>
