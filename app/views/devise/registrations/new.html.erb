<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="card">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-800 mb-2">Создать аккаунт</h2>
        <p class="text-gray-600">Зарегистрируйтесь, чтобы начать работу</p>
        <% if Rails.env.development? %>
          <div class="mt-4 p-3 bg-blue-50 border border-blue-200 rounded-lg text-sm text-blue-700">
            <strong>Внимание:</strong> После регистрации письмо с подтверждением будет доступно по адресу:<br>
            <a href="/letter_opener" target="_blank" class="underline font-medium">http://localhost:3000/letter_opener</a>
          </div>
        <% end %>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "your@email.com" %>
        </div>

        <div>
          <%= f.label :password, "Пароль", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500 mb-2">Минимум <%= @minimum_password_length %> символов</p>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input", placeholder: "Введите пароль" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Подтверждение пароля", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", placeholder: "Повторите пароль" %>
        </div>

        <div>
          <%= f.submit "Зарегистрироваться", class: "btn-primary w-full" %>
        </div>
      <% end %>

      <div class="mt-6">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
