<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="card">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-800 mb-2">Редактировать профиль</h2>
        <p class="text-gray-600">Обновите информацию о себе</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="bg-yellow-50 border border-yellow-200 text-yellow-700 px-4 py-3 rounded-lg text-sm">
            Ожидается подтверждение для: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <div>
          <%= f.label :password, "Новый пароль", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <p class="text-xs text-gray-500 mb-2">Оставьте пустым, если не хотите менять</p>
          <%= f.password_field :password, autocomplete: "new-password", class: "input", placeholder: "Новый пароль" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500 mt-1">Минимум <%= @minimum_password_length %> символов</p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Подтверждение нового пароля", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", placeholder: "Подтвердите новый пароль" %>
        </div>

        <div>
          <%= f.label :current_password, "Текущий пароль", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <p class="text-xs text-gray-500 mb-2">Нужен для подтверждения изменений</p>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "input", placeholder: "Введите текущий пароль" %>
        </div>

        <div>
          <%= f.submit "Обновить", class: "btn-primary w-full" %>
        </div>
      <% end %>

      <div class="mt-8 pt-6 border-t border-gray-200">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Удалить аккаунт</h3>
        <p class="text-sm text-gray-600 mb-4">Вы уверены? Это действие нельзя отменить.</p>
        <%= button_to "Удалить аккаунт", registration_path(resource_name), 
            data: { confirm: "Вы уверены? Это действие нельзя отменить.", turbo_confirm: "Вы уверены? Это действие нельзя отменить." }, 
            method: :delete, 
            class: "btn-secondary w-full" %>
      </div>

      <div class="mt-6 text-center">
        <%= link_to "Назад", :back, class: "text-primary-600 hover:text-primary-700 font-medium text-sm" %>
      </div>
    </div>
  </div>
</div>
