<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="card">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-800 mb-2">Вход в аккаунт</h2>
        <p class="text-gray-600">Войдите, чтобы продолжить работу</p>
        <% if Rails.env.development? && alert&.include?("confirm") %>
          <div class="mt-4 p-3 bg-yellow-50 border border-yellow-200 rounded-lg text-sm text-yellow-800">
            <strong>Нужно подтвердить email!</strong><br>
            Письмо с подтверждением доступно по адресу:<br>
            <a href="/letter_opener" target="_blank" class="underline font-medium">http://localhost:3000/letter_opener</a><br>
            Или <%= link_to "запросите повторную отправку", new_user_confirmation_path, class: "underline font-medium" %>
          </div>
        <% end %>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <% if alert %>
          <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg" role="alert">
            <%= alert %>
          </div>
        <% end %>

        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "your@email.com" %>
        </div>

        <div>
          <%= f.label :password, "Пароль", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "input", placeholder: "Введите пароль" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, "Запомнить меня", class: "ml-2 block text-sm text-gray-700" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Войти", class: "btn-primary w-full" %>
        </div>
      <% end %>

      <div class="mt-6">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
