<div class="space-y-3 text-center">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Уже есть аккаунт? Войти", new_session_path(resource_name), class: "text-primary-600 hover:text-primary-700 font-medium text-sm" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Нет аккаунта? Зарегистрироваться", new_registration_path(resource_name), class: "text-primary-600 hover:text-primary-700 font-medium text-sm" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Забыли пароль?", new_password_path(resource_name), class: "text-gray-600 hover:text-gray-700 text-sm" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Не получили письмо с подтверждением?", new_confirmation_path(resource_name), class: "text-gray-600 hover:text-gray-700 text-sm" %>
  <% end %>
</div>
