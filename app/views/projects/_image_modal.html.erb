              <h3 class="text-base sm:text-lg font-semibold uppercase mb-2 neon-electric">
                <%= @image.folder&.name || @image.project&.name || "–ë–ï–ó –ù–ê–ó–í–ê–ù–ò–Ø" %>
              </h3>
              <p class="text-xs sm:text-sm" style="color: var(--text-muted);">
                –ó–∞–≥—Ä—É–∂–µ–Ω–æ <%= @image.created_at.strftime("%d %B %Y –≤ %H:%M") %>
              </p>
            </div>
          </div>
        </div>

        <!-- Sidebar —Å –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–µ–π –∏ –¥–µ–π—Å—Ç–≤–∏—è–º–∏ -->
        <div class="space-y-3 sm:space-y-4 mt-4 lg:mt-0">
          <!-- –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è -->
          <div class="print-card p-3 sm:p-4" style="background: var(--panel-deep);">
            <h3 class="text-xs sm:text-sm font-semibold uppercase mb-2 sm:mb-3 neon-electric">–ò–ù–§–û–†–ú–ê–¶–ò–Ø</h3>
            <div class="space-y-2 sm:space-y-3">
              <div>
                <span class="text-xs uppercase block mb-1" style="color: var(--text-muted);">–ü–∞–ø–∫–∞:</span>
                <p class="text-xs sm:text-sm font-semibold" style="color: var(--text-primary);">
                  <%= @image.folder&.name || "–ù–µ —É–∫–∞–∑–∞–Ω–∞" %>
                </p>
              </div>
              <div>
                <span class="text-xs uppercase block mb-1" style="color: var(--text-muted);">–ü—Ä–æ–µ–∫—Ç:</span>
                <p class="text-xs sm:text-sm font-semibold" style="color: var(--text-primary);">
                  <%= @image.project&.name || "–ù–µ —É–∫–∞–∑–∞–Ω" %>
                </p>
              </div>
              <div>
                <span class="text-xs uppercase block mb-1" style="color: var(--text-muted);">–°—Ç–∏–ª–µ–π —Å–æ–∑–¥–∞–Ω–æ:</span>
                <p class="text-xs sm:text-sm font-semibold neon-electric">
                  <%= @image.styles_count %>
                </p>
              </div>
            </div>
          </div>

          <!-- –î–µ–π—Å—Ç–≤–∏—è -->
          <div class="print-card p-3 sm:p-4" style="background: var(--panel-deep);">
            <h3 class="text-xs sm:text-sm font-semibold uppercase mb-2 sm:mb-3 neon-electric">–î–ï–ô–°–¢–í–ò–Ø</h3>
            <div class="space-y-2">
              <% if @image.deleted_at.nil? %>
                <!-- –ö–Ω–æ–ø–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è (–µ—Å–ª–∏ –Ω–µ –≤ –∫–æ—Ä–∑–∏–Ω–µ) -->
                <%= form_with url: soft_delete_image_path(@image), method: :patch, local: true, data: { turbo: false }, class: "w-full", onsubmit: "handleImageDelete(event, #{@image.id})" do |f| %>
                  <%= f.submit "üóëÔ∏è –£–î–ê–õ–ò–¢–¨", 
                      class: "w-full px-4 py-2.5 sm:py-2 text-xs font-semibold uppercase transition-all min-h-[44px] flex items-center justify-center",
                      style: "background: var(--accent-blue); color: var(--text-primary); border-radius: 0;",
                      onclick: "return confirm('–ü–µ—Ä–µ–º–µ—Å—Ç–∏—Ç—å –≤ –∫–æ—Ä–∑–∏–Ω—É?');" %>
                <% end %>
              <% else %>
                <!-- –ö–Ω–æ–ø–∫–∏ –¥–ª—è –∫–æ—Ä–∑–∏–Ω—ã -->
                <%= button_to restore_image_path(@image), method: :patch,
                    class: "w-full px-4 py-2.5 sm:py-2 text-xs font-semibold uppercase transition-all min-h-[44px] flex items-center justify-center",
                    style: "background: var(--accent-electric); color: var(--ink); border-radius: 0;",
                    data: { turbo_method: :patch },
                    onclick: "handleImageRestore(event, #{@image.id})" do %>
                  ‚Üª –í–û–°–°–¢–ê–ù–û–í–ò–¢–¨
                <% end %>
                <%= button_to image_path(@image), method: :delete,
                    class: "w-full px-4 py-2.5 sm:py-2 text-xs font-semibold uppercase transition-all mt-2 min-h-[44px] flex items-center justify-center",
                    style: "background: var(--accent-blue); color: var(--text-primary); border-radius: 0;",
                    data: { turbo_method: :delete },
                    onclick: "return confirm('–£–¥–∞–ª–∏—Ç—å –Ω–∞–≤—Å–µ–≥–¥–∞? –≠—Ç–æ –¥–µ–π—Å—Ç–≤–∏–µ –Ω–µ–ª—å–∑—è –æ—Ç–º–µ–Ω–∏—Ç—å.');" do %>
                  ‚ö†Ô∏è –£–î–ê–õ–ò–¢–¨ –ù–ê–í–°–ï–ì–î–ê
                <% end %>
              <% end %>
            </div>
          </div>

          <!-- –°–æ–∑–¥–∞—Ç—å —Å—Ç–∏–ª—å -->
          <div class="print-card p-3 sm:p-4" style="background: var(--panel-deep);">
            <h3 class="text-xs sm:text-sm font-semibold uppercase mb-2 sm:mb-3 neon-electric">–°–û–ó–î–ê–¢–¨ –°–¢–ò–õ–¨</h3>
            <p class="text-xs mb-2 sm:mb-3" style="color: var(--text-muted);">
              –í—ã–±–µ—Ä–∏—Ç–µ —Å—Ç–∏–ª—å –¥–ª—è –≥–µ–Ω–µ—Ä–∞—Ü–∏–∏ –≤–∏—Ä—Ç—É–∞–ª—å–Ω–æ–≥–æ —Å—Ç–∞–π–ª–∏–Ω–≥–∞
            </p>
            <button 
              onclick="openStyleSelectionModal(<%= @image.id %>)" 
              class="w-full px-4 py-2.5 sm:py-2 text-xs font-semibold uppercase text-center transition-all min-h-[44px] flex items-center justify-center"
              style="background: var(--accent-electric); color: var(--ink); border-radius: 0; border: none; cursor: pointer;">
              –í–´–ë–†–ê–¢–¨ –°–¢–ò–õ–¨
            </button>
          </div>

          <!-- –°–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞–Ω–Ω—ã–µ —Å—Ç–∏–ª–∏ -->
          <% if @generations.any? %>
            <div class="print-card p-3 sm:p-4" style="background: var(--panel-deep);">
              <h3 class="text-xs sm:text-sm font-semibold uppercase mb-2 sm:mb-3 neon-electric">–°–ì–ï–ù–ï–†–ò–†–û–í–ê–ù–ù–´–ï –°–¢–ò–õ–ò</h3>
              <div class="space-y-2">
                <% @generations.each do |generation| %>
                  <div class="p-2 sm:p-3 border" style="background: var(--panel-raise); border-color: var(--border-sharp);">
                    <div class="flex items-center justify-between mb-2 flex-wrap gap-2">
                      <span class="text-xs font-semibold" style="color: var(--text-primary);">
                        <%= generation.style.name %>
                      </span>
                      <span class="px-2 py-1 text-xs font-semibold uppercase <%= generation.status == 'succeeded' ? 'bg-[rgba(0,224,255,0.2)] text-[var(--accent-electric)] border border-[var(--accent-electric)]' : generation.status == 'failed' ? 'bg-[rgba(255,59,127,0.2)] text-[#ff3b7f] border border-[#ff3b7f]' : 'bg-[rgba(255,230,0,0.2)] text-[#ffe600] border border-[#ffe600]' %>">
                        <%= generation.status.humanize %>
                      </span>
                    </div>
                    <% if generation.output_image&.file&.attached? %>
                      <div class="block mt-2">
                        <%= image_tag generation.output_image.file, class: "w-full h-20 sm:h-24 object-cover" %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function closeImageModal(imageId) {
    const modal = document.getElementById('image-modal-' + imageId);
    if (modal) {
      modal.style.opacity = '0';
      modal.style.transition = 'opacity 0.2s ease-out';
      setTimeout(() => {
        modal.remove();
      }, 200);
    }
  }

  // –û–±—Ä–∞–±–æ—Ç–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
  function handleImageDelete(event, imageId) {
    if (confirm('–ü–µ—Ä–µ–º–µ—Å—Ç–∏—Ç—å –≤ –∫–æ—Ä–∑–∏–Ω—É?')) {
      // –ó–∞–∫—Ä—ã–≤–∞–µ–º –º–æ–¥–∞–ª–∫—É –ø–µ—Ä–µ–¥ —É–¥–∞–ª–µ–Ω–∏–µ–º
      closeImageModal(imageId);
      // –§–æ—Ä–º–∞ –æ—Ç–ø—Ä–∞–≤–∏—Ç—Å—è –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏
      return true;
    }
    event.preventDefault();
    return false;
  }

  // –û–±—Ä–∞–±–æ—Ç–∫–∞ –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏—è –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
  function handleImageRestore(event, imageId) {
    // –ó–∞–∫—Ä—ã–≤–∞–µ–º –º–æ–¥–∞–ª–∫—É –ø–µ—Ä–µ–¥ –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ–º
    closeImageModal(imageId);
    // –§–æ—Ä–º–∞ –æ—Ç–ø—Ä–∞–≤–∏—Ç—Å—è –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏
    return true;
  }

  // –£–±–µ–∂–¥–∞–µ–º—Å—è, —á—Ç–æ —Ñ—É–Ω–∫—Ü–∏—è openStyleSelectionModal –¥–æ—Å—Ç—É–ø–Ω–∞
  if (typeof window.openStyleSelectionModal === 'undefined') {
    console.warn('openStyleSelectionModal not found, defining fallback');
    window.openStyleSelectionModal = function(imageId) {
      console.log('Fallback openStyleSelectionModal called for image:', imageId);
      const stylePath = '/images/' + imageId + '/style_selection';
      window.location.href = stylePath;
    };
  }

  // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø–æ Escape
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      // –°–Ω–∞—á–∞–ª–∞ –∑–∞–∫—Ä—ã–≤–∞–µ–º –º–æ–¥–∞–ª–∫–∏ –≤—ã–±–æ—Ä–∞ —Å—Ç–∏–ª–µ–π
      const styleModals = document.querySelectorAll('[id^="style-selection-modal-"]');
      if (styleModals.length > 0) {
        styleModals.forEach(modal => {
          const imageId = modal.id.replace('style-selection-modal-', '');
          if (typeof window.closeStyleModal === 'function') {
            window.closeStyleModal(imageId);
          }
        });
        return;
      }
      
      // –ó–∞—Ç–µ–º –∑–∞–∫—Ä—ã–≤–∞–µ–º –º–æ–¥–∞–ª–∫–∏ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π
      const modals = document.querySelectorAll('[id^="image-modal-"]');
      modals.forEach(modal => {
        const imageId = modal.id.replace('image-modal-', '');
        closeImageModal(imageId);
      });
    }
  });
</script>
