<% content_for :title, "Просмотр фото - VirtualStagingAI" %>

<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
    <div class="container mx-auto px-4 py-4">
      <div class="flex justify-between items-center">
        <div class="flex items-center space-x-2">
          <div class="gradient-bg w-8 h-8 rounded-lg"></div>
          <%= link_to "VirtualStagingAI", root_path, class: "text-xl font-bold text-gray-800" %>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to "My Photos", dashboard_path, class: "text-gray-600 hover:text-purple-600 font-medium" %>
          <%= link_to "Dashboard", dashboard_path, class: "btn-secondary" %>
        </div>
      </div>
    </div>
  </header>

  <div class="container mx-auto px-4 py-8">
    <div class="mb-6">
      <%= link_to "← Назад к галерее", dashboard_path, class: "text-gray-600 hover:text-gray-800 font-medium" %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Основное изображение -->
      <div class="lg:col-span-2">
        <div class="card">
          <div class="aspect-video relative overflow-hidden bg-gray-100 rounded-lg">
            <% if @image.file.attached? %>
              <%= image_tag @image.file, class: "w-full h-full object-contain", alt: "Uploaded photo" %>
            <% else %>
              <div class="w-full h-full flex items-center justify-center text-gray-400">
                <svg class="w-24 h-24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
            <% end %>
          </div>

          <div class="mt-4">
            <h2 class="text-2xl font-bold text-gray-800 mb-2">
              <%= @image.room_type&.humanize || "Без названия" %>
            </h2>
            <p class="text-sm text-gray-500">
              Загружено <%= @image.created_at.strftime("%d %B %Y в %H:%M") %>
            </p>
          </div>
        </div>
      </div>

      <!-- Sidebar с информацией и стилями -->
      <div class="space-y-6">
        <!-- Информация -->
        <div class="card">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Информация</h3>
          <div class="space-y-3">
            <div>
              <span class="text-sm text-gray-500">Тип комнаты:</span>
              <p class="text-sm font-medium text-gray-800">
                <%= @image.room_type&.humanize || "Не указан" %>
              </p>
            </div>
            <div>
              <span class="text-sm text-gray-500">Стилей создано:</span>
              <p class="text-sm font-medium text-gray-800">
                <%= @image.styles_count %>
              </p>
            </div>
          </div>
        </div>

        <!-- Создать стиль -->
        <div class="card">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Создать стиль</h3>
          <p class="text-sm text-gray-600 mb-4">
            Выберите стиль для генерации виртуального стайлинга
          </p>
          <%= link_to "Выбрать стиль", "#", class: "btn-primary w-full", data: { turbo: false } %>
        </div>

        <!-- Сгенерированные стили -->
        <% if @generations.any? %>
          <div class="card">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Сгенерированные стили</h3>
            <div class="space-y-3">
              <% @generations.each do |generation| %>
                <div class="p-3 bg-gray-50 rounded-lg">
                  <div class="flex items-center justify-between mb-2">
                    <span class="text-sm font-medium text-gray-800">
                      <%= generation.style.name %>
                    </span>
                    <span class="badge-<%= generation.status == 'succeeded' ? 'success' : generation.status == 'failed' ? 'error' : 'info' %>">
                      <%= generation.status.humanize %>
                    </span>
                  </div>
                  <% if generation.output_image&.file&.attached? %>
                    <div class="block">
                      <%= image_tag generation.output_image.file, class: "w-full h-32 object-cover rounded-lg" %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
